<Page
    x:Class="RyTuneX.Views.DebloatSystemPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RyTuneX.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d">
    <Page.Resources>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Padding="24,6,24,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <AutoSuggestBox x:Name="AppSearchBox"
                            x:Uid="DebloatSystemPage_SearchBar"
                            Grid.Row="0"
                            Grid.Column="0"
                            HorizontalAlignment="Stretch"
                            MinWidth="80"
                            MaxWidth="300"
                            Height="34"
                            Visibility="Collapsed"
                            QueryIcon="Zoom"
                            TextChanged="AppSearchBox_TextChanged"
                            QuerySubmitted="AppSearchBox_QuerySubmitted"/>

            <StackPanel x:Name="TempStackButtonTextBar"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="12,0,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Vertical"
                        VerticalAlignment="Center"
                        Visibility="Collapsed">
                <Button x:Name="TempButton" Click="TempButton_Click">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <ProgressRing x:Name="TempButtonProgressRing" 
                            Width="16" 
                            Height="16" 
                            Visibility="Collapsed"
                            IsActive="True"/>
                        <FontIcon x:Name="TempButtonIcon" Glyph="&#xEA99;" FontSize="16"/>
                        <TextBlock x:Uid="DebloatSystemPage_TempButton"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <StackPanel Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,6,12,6"
                        Orientation="Horizontal"
                        Spacing="8"
                        VerticalAlignment="Center">
                <TextBlock x:Name="installedAppsCount"
                           Visibility="Collapsed"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"/>
                <Button x:Name="reloadButton"
                        Visibility="Collapsed"
                        Click="ReloadApps_Click"
                        Padding="6"
                        MinWidth="0"
                        MinHeight="0"
                        VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE72C;" FontSize="12"/>
                </Button>
            </StackPanel>

            <controls:WrapPanel Grid.Row="1"
                                Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                <StackPanel x:Name="appsFilterText" Margin="0,6,0,6" Visibility="Collapsed" Orientation="Horizontal">
                    <FontIcon Glyph="&#xE71C;" FontSize="{StaticResource TextBoxIconFontSize}"/>
                    <TextBlock x:Uid="DebloatSystemPage_AppsFilter" Style="{StaticResource DetailBodyBaseMediumStyle}" Margin="6,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <ComboBox Width="190" x:Name="appsFilter" Margin="8,6,0,6" VerticalAlignment="Center" Visibility="Collapsed" SelectedIndex="0" SelectionChanged="appsFilter_SelectionChanged">
                    <ComboBoxItem x:Uid="DebloatSystemPage_StandardApps" Tag="Standard"/>
                    <ComboBoxItem x:Uid="DebloatSystemPage_AllApps" Tag="All"/>
                    <ComboBoxItem x:Uid="DebloatSystemPage_Win32Apps" Tag="Win32"/>
                </ComboBox>

                <Button Margin="12,6,0,6" x:Name="uninstallButton" Visibility="Collapsed" Click="UninstallSelectedApp_Click" Style="{ThemeResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                        <TextBlock x:Uid="DebloatSystemPage_UninstallButton"/>
                    </StackPanel>
                </Button>
            </controls:WrapPanel>
        </Grid>

        <ScrollViewer Padding="24,14,24,0" Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="0,0,0,38">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock x:Uid="DebloatSystemPage_NoAppFound" Grid.Row="1" x:Name="noAppFoundText" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" Style="{StaticResource DetailBodyBaseMediumStyle}"/>

                <StackPanel Margin="10" x:Name="gettingAppsLoading" Grid.Row="1" VerticalAlignment="Center" Visibility="Visible">
                    <ProgressRing Margin="20" Width="100" Height="100" IsIndeterminate="True"/>
                    <TextBlock x:Uid="DebloatSystemPage_FetchingInstalledApps" HorizontalAlignment="Center" Style="{StaticResource DetailBodyBaseMediumStyle}"/>
                </StackPanel>

                <ListView x:Name="appListView"
                    Grid.Row="1"
                    Visibility="Collapsed"
                    ItemsSource="{x:Bind AppList}"
                    SelectionMode="Multiple">
                    <ListView.ItemContainerTransitions>
                        <TransitionCollection>
                            <EntranceThemeTransition FromVerticalOffset="40" />
                            <RepositionThemeTransition IsStaggeringEnabled="False" />
                        </TransitionCollection>
                    </ListView.ItemContainerTransitions>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0,0,0,3"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Grid>
                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="CommonStates">
                                                    <VisualState x:Name="Normal"/>
                                                    <VisualState x:Name="PointerOver">
                                                        <VisualState.Setters>
                                                            <Setter Target="CardBorder.Background"
                                                                Value="{ThemeResource CardBackgroundFillColorSecondaryBrush}"/>
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                    <VisualState x:Name="Pressed">
                                                        <VisualState.Setters>
                                                            <Setter Target="CardBorder.Background"
                                                                Value="{ThemeResource CardBackgroundFillColorTertiaryBrush}"/>
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                    <VisualState x:Name="Disabled"/>
                                                </VisualStateGroup>
                                                <VisualStateGroup x:Name="SelectionStates">
                                                    <VisualState x:Name="Unselected"/>
                                                    <VisualState x:Name="Selected">
                                                        <VisualState.Setters>
                                                            <Setter Target="CardBorder.Background" Value="{ThemeResource CardBackgroundFillColorSecondaryBrush}"/>
                                                            <Setter Target="ItemCheckBox.IsChecked" Value="True"/>
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                    <VisualState x:Name="SelectedSingleOrMultiple">
                                                        <VisualState.Setters>
                                                            <Setter Target="CardBorder.Background" Value="{ThemeResource CardBackgroundFillColorSecondaryBrush}"/>
                                                            <Setter Target="ItemCheckBox.IsChecked" Value="True"/>
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                </VisualStateGroup>
                                            </VisualStateManager.VisualStateGroups>
                                            <Border x:Name="CardBorder"
                                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                Padding="10">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <CheckBox x:Name="ItemCheckBox"
                                                        Grid.Column="0"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0"
                                                        MinWidth="0"
                                                        IsHitTestVisible="False"
                                                        IsTabStop="False"
                                                        IsChecked="{TemplateBinding IsSelected}" />
                                                    <ContentPresenter Grid.Column="1"
                                                        HorizontalAlignment="Stretch"/>
                                                </Grid>
                                            </Border>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Background="Transparent">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0"
                                    Background="{ThemeResource CardBackgroundFillColorDefault}"
                                    BorderBrush="{ThemeResource CircleElevationBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Width="48"
                                    Height="48"
                                    Margin="0,0,18,0">
                                    <Image Source="{Binding Item2}"
                                        Width="38"
                                        Height="38"
                                        Visibility="{Binding Item2, Converter={StaticResource NullToVisibilityConverter}}"/>
                                </Grid>
                                <TextBlock Grid.Column="1"
                                    Text="{Binding Item1}"
                                    VerticalAlignment="Center"
                                    FontWeight="SemiBold"
                                    FontSize="14"
                                    TextWrapping="WrapWholeWords"/>
                                <TextBlock Grid.Column="2"
                                    Text="win32"
                                    VerticalAlignment="Center"
                                    Opacity="0.7"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Visibility="{Binding Item3}"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </ScrollViewer>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="uninstallingStatusText" Margin="36,6" Grid.Column="0" Style="{StaticResource CaptionTextBlockStyle}" Visibility="Collapsed" TextWrapping="Wrap"/>
            <ProgressBar x:Name="uninstallingStatusBar" Margin="0,0,36,0" Grid.Column="1" Width="Auto" Minimum="0" Maximum="100"/>
        </Grid>
    </Grid>
</Page>