<Page
    x:Class="RyTuneX.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:RyTuneX.Helpers"
    xmlns:behaviors="using:RyTuneX.Behaviors"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:winbehaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:models="using:RyTuneX.Models"
    xmlns:dev="using:DevWinUI"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    Loaded="OnLoaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="AppTitleBar"
              Grid.Row="0"
              Height="48"
              IsHitTestVisible="True"
              VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="BackButtonColumn" Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="128"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="TitleBarBackButton"
                    Grid.Column="0"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    IsEnabled="{x:Bind ViewModel.IsBackEnabled, Mode=OneWay}"
                    Click="TitleBarBackButton_Click"
                    PointerEntered="TitleBarBackButton_PointerEntered"
                    PointerExited="TitleBarBackButton_PointerExited"
                    VerticalAlignment="Center"
                    Width="38" Height="42"
                    Padding="10"
                    Margin="2,2,0,0">
                <AnimatedIcon x:Name="BackAnimatedIcon">
                    <AnimatedIcon.Source>
                        <animatedvisuals:AnimatedBackVisualSource/>
                    </AnimatedIcon.Source>
                    <AnimatedIcon.FallbackIconSource>
                        <SymbolIconSource Symbol="Back"/>
                    </AnimatedIcon.FallbackIconSource>
                </AnimatedIcon>
            </Button>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Grid Margin="8,0,16,0">
                    <FontIcon x:Name="IsAdminIcon"
                    x:Uid="IsAdminIcon"
                    Glyph="&#xEA18;"
                    VerticalAlignment="Center"
                    Opacity="0.75"
                    FontSize="18"/>
                    <FontIcon x:Name="NotAdminIcon"
                    x:Uid="NotAdminIcon"
                    Glyph="&#xE1DE;"
                    VerticalAlignment="Center"
                    Opacity="0.75"
                    FontSize="18"/>
                </Grid>
                <Image x:Name="ShellTitleBarImage" Source="/Assets/WindowIcon.ico"
                    HorizontalAlignment="Left"
                    Width="22"
                    Height="22"/>
                <TextBlock x:Name="AppTitleBarText"
                    Text="RyTuneX"
                    VerticalAlignment="Center"
                    Margin="16,0,0,0"
                    TextWrapping="NoWrap"
                    Style="{StaticResource CaptionTextBlockStyle}"/>
                <TextBlock x:Name="AppTitleBarVersion"
                    VerticalAlignment="Center"
                    Margin="8,0,0,0"
                    TextWrapping="NoWrap"
                    FontSize="11"
                    Opacity="0.75"/>
            </StackPanel>
            
            <!-- Search Box in Title Bar -->
            <AutoSuggestBox x:Name="TitleBarSearchBox"
                            Grid.Column="3"
                            Width="280"
                            MaxWidth="400"
                            MinWidth="200"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            PlaceholderText="Search settings..."
                            CornerRadius="16"
                            QueryIcon="Find"
                            TextMemberPath="DisplayName"
                            TextChanged="TitleBarSearchBox_TextChanged"
                            SuggestionChosen="TitleBarSearchBox_SuggestionChosen"
                            QuerySubmitted="TitleBarSearchBox_QuerySubmitted">
                <AutoSuggestBox.ItemTemplate>
                    <DataTemplate x:DataType="models:SearchableItem">
                        <Grid Padding="4,8" ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <FontIcon Grid.Column="0" 
                                      Glyph="{x:Bind Glyph}" 
                                      FontSize="16"
                                      VerticalAlignment="Center"
                                      Opacity="0.8"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{x:Bind DisplayName}" 
                                           Style="{StaticResource BodyTextBlockStyle}"
                                           TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{x:Bind Category}" 
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Opacity="0.6"
                                           TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </AutoSuggestBox.ItemTemplate>
            </AutoSuggestBox>
        </Grid>
        <NavigationView
            x:Name="NavigationViewControl"
            Grid.Row="1"
            IsBackButtonVisible="Collapsed"
            SelectedItem="{x:Bind ViewModel.Selected, Mode=OneWay}"
            IsSettingsVisible="True"
            PaneDisplayMode="Auto"
            IsPaneToggleButtonVisible="False"
            ExpandedModeThresholdWidth="800"
            DisplayModeChanged="NavigationViewControl_DisplayModeChanged"
            OpenPaneLength="220"
            Header="{x:Bind ((ContentControl)ViewModel.Selected).Content, Mode=OneWay}">
            <NavigationView.Resources>
                <SolidColorBrush
                    x:Key="NavigationViewContentBackground"
                    Color="Transparent" />
                <SolidColorBrush x:Key="NavigationViewContentGridBorderBrush" Color="Transparent" />
            </NavigationView.Resources>
            <NavigationView.MenuItems>
                <NavigationViewItem x:Uid="Shell_Home" helpers:NavigationHelper.NavigateTo="RyTuneX.Views.HomePage">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE80F;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_OptimizeSystem" helpers:NavigationHelper.NavigateTo="RyTuneX.Views.OptimizeSystemPage">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xF259;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Services" helpers:NavigationHelper.NavigateTo="RyTuneX.Views.ServicesPage">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE9F5;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Processes" helpers:NavigationHelper.NavigateTo="RyTuneX.Views.ProcessesPage">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xECAA;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Repair" helpers:NavigationHelper.NavigateTo="RyTuneX.Views.RepairPage">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE90F;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Debloat" helpers:NavigationHelper.NavigateTo="RyTuneX.Views.DebloatSystemPage">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE74D;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Privacy" helpers:NavigationHelper.NavigateTo="RyTuneX.Views.PrivacyPage">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE7B3;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Features" helpers:NavigationHelper.NavigateTo="RyTuneX.Views.FeaturesPage">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE74C;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Network" helpers:NavigationHelper.NavigateTo="RyTuneX.Views.NetworkPage">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE968;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Security" helpers:NavigationHelper.NavigateTo="RyTuneX.Views.SecurityPage">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xEA18;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_GroupPolicy" helpers:NavigationHelper.NavigateTo="RyTuneX.Views.GroupPolicyPage">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE9D5;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_SystemInfo" helpers:NavigationHelper.NavigateTo="RyTuneX.Views.SystemInfoPage">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE770;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <NavigationView.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBlock
                            Text="{Binding}"
                            Style="{ThemeResource TitleTextBlockStyle}" />
                    </Grid>
                </DataTemplate>
            </NavigationView.HeaderTemplate>
            <i:Interaction.Behaviors>
                <behaviors:NavigationViewHeaderBehavior
                    DefaultHeader="{x:Bind ((ContentControl)ViewModel.Selected).Content, Mode=OneWay}">
                    <behaviors:NavigationViewHeaderBehavior.DefaultHeaderTemplate>
                        <DataTemplate>
                            <Grid>
                                <TextBlock
                                    Text="{Binding}"
                                    Style="{ThemeResource TitleTextBlockStyle}" />
                            </Grid>
                        </DataTemplate>
                    </behaviors:NavigationViewHeaderBehavior.DefaultHeaderTemplate>
                </behaviors:NavigationViewHeaderBehavior>
            </i:Interaction.Behaviors>
            <Frame x:Name="NavigationFrame"/>
        </NavigationView>
        <Grid
            Grid.Row="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Canvas.ZIndex="999">
            <Border Width="400">
                <StackPanel
                    dev:Growl.GrowlParent="True"
                    dev:Growl.Token="MainToken"/>
            </Border>
        </Grid>
    </Grid>
</Page>
