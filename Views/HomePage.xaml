<Page
    x:Class="RyTuneX.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:local="using:RyTuneX.Controls"
    mc:Ignorable="d">
    <ScrollView Padding="24,14,24,0">
        <Grid x:Name="HeaderGrid" Margin="0,0,0,38">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel
                HorizontalAlignment="Left"
                Grid.Row="0"
                Padding="20"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <TextBlock
                    Margin="0,6"
                    FontSize="16"
                    Text="{x:Bind _versionDescription}" />
                <StackPanel>
                    <Button
                        Style="{StaticResource AccentButtonStyle}"
                        Margin="6"
                        HorizontalAlignment="Stretch"
                        Click="GithubButton_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <BitmapIcon
                                Width="20"
                                Margin="10,0,10,0"
                                HorizontalAlignment="Left"
                                UriSource="ms-appx:///Assets/github.png"/>
                            <TextBlock x:Uid="HomePage_WebsiteButton"/>
                        </StackPanel>
                    </Button>
                    <Button
                        Margin="6"
                        HorizontalAlignment="Stretch"
                        Click="DiscordButton_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <BitmapIcon
                                Foreground="{ThemeResource TextFillColorPrimary}"
                                Width="20"
                                Margin="10,0,10,0"
                                HorizontalAlignment="Left"
                                UriSource="ms-appx:///Assets/discord.png"/>
                            <TextBlock x:Uid="HomePage_DiscordButton"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
            <controls:WrapPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" HorizontalSpacing="8" VerticalSpacing="8">
                <controls:WrapPanel.ChildrenTransitions>
                        <EntranceThemeTransition FromVerticalOffset="50" />
                        <RepositionThemeTransition IsStaggeringEnabled="False" />
                    </controls:WrapPanel.ChildrenTransitions>
                <!-- CPU Usage Block -->
                <Grid Padding="10" Width="240" Height="150" CornerRadius="8" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                    <local:UsageGraph x:Name="cpuGraph" Margin="-10" />
                    <FontIcon Glyph="&#xE950;" Width="40" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Grid VerticalAlignment="Bottom" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Uid="HomePage_cpuUsage" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
                        <TextBlock x:Name="cpuUsageText" Grid.Column="1" Text="..." Margin="12,0,0,0" VerticalAlignment="Bottom" Style="{StaticResource DetailBodyBaseMediumStyle}"/>
                    </Grid>
                </Grid>

                <!-- RAM Usage Block -->
                <Grid Padding="10" Width="240" Height="150" CornerRadius="8" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" >
                    <local:UsageGraph x:Name="ramGraph" Margin="-10" />
                    <FontIcon Glyph="&#xE964;" Width="40" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Grid VerticalAlignment="Bottom" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Uid="HomePage_ramUsage" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
                        <TextBlock x:Name="ramUsageText" Grid.Column="1" Text="..." Margin="12,0,0,0" VerticalAlignment="Bottom" Style="{StaticResource DetailBodyBaseMediumStyle}"/>
                    </Grid>
                </Grid>

                <!-- Disk Usage Block -->
                <Grid Padding="10" Width="240" Height="150" CornerRadius="8" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" >
                    <local:UsageGraph x:Name="diskGraph" Margin="-10" />
                    <FontIcon Glyph="&#xEDA2;" Width="40" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Grid VerticalAlignment="Bottom" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Uid="HomePage_diskUsage" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
                        <TextBlock x:Name="diskUsageText" Grid.Column="1" Text="..." Margin="12,0,0,0" VerticalAlignment="Bottom" Style="{StaticResource DetailBodyBaseMediumStyle}"/>
                    </Grid>
                </Grid>

                <!-- Network Usage Block -->
                <Grid Padding="10" Width="240" Height="150" CornerRadius="8" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                    <local:UsageGraph x:Name="networkDownloadGraph" Margin="-10" />
                    <local:UsageGraph x:Name="networkUploadGraph" GraphColor="#C8A852" Margin="-10" />
                    <FontIcon Glyph="&#xEDA3;" Width="40" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <StackPanel x:Name="networkUsagePanel" Orientation="Horizontal"  Padding="10" Spacing="8" HorizontalAlignment="Right" VerticalAlignment="Top">
                        <StackPanel.ChildrenTransitions>
                            <EntranceThemeTransition FromVerticalOffset="50" />
                            <RepositionThemeTransition IsStaggeringEnabled="False" />
                        </StackPanel.ChildrenTransitions>
                        <StackPanel Orientation="Horizontal" Spacing="2">
                            <FontIcon Glyph="&#xE74A;" FontSize="10" Foreground="#C8A852"/>
                            <TextBlock x:Name="networkUploadUsageText" FontSize="12" Text="..." Style="{StaticResource DetailBodyBaseMediumStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="2">
                            <FontIcon Glyph="&#xE74B;" FontSize="10" Foreground="{ThemeResource SystemAccentColor}"/>
                            <TextBlock x:Name="networkDownloadUsageText" FontSize="12" Text="..." Style="{StaticResource DetailBodyBaseMediumStyle}"/>
                        </StackPanel>
                    </StackPanel>
                    <TextBlock x:Uid="HomePage_networkUsage" TextWrapping="Wrap" VerticalAlignment="Bottom" Margin="5"/>
                </Grid>

                <!-- GPU Usage Block -->
                <Grid Padding="10" Width="240" Height="150" CornerRadius="8" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" >
                    <local:UsageGraph x:Name="gpuGraph" Margin="-10" />
                    <FontIcon Glyph="&#xF211;" Width="40" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Grid VerticalAlignment="Bottom" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Uid="HomePage_gpuUsage" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
                        <TextBlock x:Name="gpuUsageText" Grid.Column="1" Text="..." Margin="12,0,0,0" VerticalAlignment="Bottom" Style="{StaticResource DetailBodyBaseMediumStyle}"/>
                    </Grid>
                </Grid>

                <!-- Installed Apps Count Block -->
                <Grid Padding="10" Width="240" Height="150" CornerRadius="8" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        PointerPressed="InstalledAppsBlock_PointerPressed"
                        PointerEntered="InteractiveBlock_PointerEntered"
                        PointerExited="InteractiveBlock_PointerExited">
                    <FontIcon Glyph="&#xE71D;" Width="40" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Grid VerticalAlignment="Bottom" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Uid="HomePage_installedAppsCount" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="12,0,0,0" Spacing="4">
                            <TextBlock x:Name="installedAppsCountText" Text="..." Style="{StaticResource DetailBodyBaseMediumStyle}"/>
                            <FontIcon Glyph="&#xE76C;" FontSize="12" VerticalAlignment="Center" Opacity="0.6"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!-- Processes Count Block -->
                <Grid Padding="10" Width="240" Height="150" CornerRadius="8" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        PointerPressed="ProcessesBlock_PointerPressed"
                        PointerEntered="InteractiveBlock_PointerEntered"
                        PointerExited="InteractiveBlock_PointerExited">
                    <FontIcon Glyph="&#xECAA;" Width="40" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Grid VerticalAlignment="Bottom" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Uid="HomePage_processesCount" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="12,0,0,0" Spacing="4">
                            <TextBlock x:Name="processesCountText" Text="..." Style="{StaticResource DetailBodyBaseMediumStyle}"/>
                            <FontIcon Glyph="&#xE76C;" FontSize="12" VerticalAlignment="Center" Opacity="0.6"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!-- Services Count Block -->
                <Grid Padding="10" Width="240" Height="150" CornerRadius="8" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        PointerPressed="ServicesBlock_PointerPressed"
                        PointerEntered="InteractiveBlock_PointerEntered"
                        PointerExited="InteractiveBlock_PointerExited">
                    <FontIcon Glyph="&#xE9F5;" Width="40" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Grid VerticalAlignment="Bottom" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Uid="HomePage_servicesCount" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="12,0,0,0" Spacing="4">
                            <TextBlock x:Name="servicesCountText" Text="..." Style="{StaticResource DetailBodyBaseMediumStyle}"/>
                            <FontIcon Glyph="&#xE76C;" FontSize="12" VerticalAlignment="Center" Opacity="0.6"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </controls:WrapPanel>
        </Grid>
    </ScrollView>
</Page>
